<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ChartView">
        <attr name="interactive" format="boolean" />
        <!-- Title Attributes -->
        <attr name="showTitle" format="boolean" />
        <attr name="title" format="string" />
        <attr name="titlePosition" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="titleWeight" format="fraction" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="fontFamily" />
    </declare-styleable>

    <declare-styleable name="PieChartView">
        <!-- Pie Attributes -->
        <attr name="pieStart" format="float" />
        <attr name="pieSectorLabelSize" format="dimension" />
        <attr name="pieSectorLabelColor" format="color" />
        <!-- Legend Attributes -->
        <attr name="showLegend" format="boolean" />
        <attr name="legendPosition" format="enum">
            <enum name="top" value="0" />
            <enum name="right" value="1" />
            <enum name="bottom" value="2" />
            <enum name="left" value="3" />
        </attr>
        <attr name="legendWeight" format="fraction" />
        <attr name="legendLabelColor" format="color" />
        <attr name="legendLabelSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BarChartView">
        <attr name="barOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="barItemLabelSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="DownloadStatusView">
        <attr name="activeSectorColor" format="color" />
        <attr name="doneSectorColor" format="color" />
        <attr name="failedSectorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MediaDistributionView">
        <attr name="audioColor" format="color" />
        <attr name="imageColor" format="color" />
        <attr name="videoColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="otherColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="completedSectorColor" format="color" />
        <attr name="pendingSectorColor" format="color" />
        <attr name="queuedSectorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ClockedRecyclerView">
        <attr name="restartInterval" format="integer" />
        <attr name="tickInterval" format="integer" />
    </declare-styleable>

</resources>