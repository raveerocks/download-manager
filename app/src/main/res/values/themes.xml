<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DownloadManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/midnight_green</item>
        <item name="colorPrimaryVariant">@color/celadon_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/spicy_mix</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="fontFamily">@font/bubblegum_sans</item>
    </style>

    <style name="Theme.DashBoard.PieChart" parent="">
        <item name="legendLabelSize">12sp</item>
        <item name="legendPosition">left</item>
        <item name="legendWeight">25%</item>
        <item name="pieSectorLabelSize">16sp</item>
        <item name="showTitle">false</item>
        <item name="pieSectorLabelColor">@color/white</item>
        <item name="fontFamily">@font/bubblegum_sans</item>
    </style>

    <style name="Theme.DashBoard.BarChart" parent="">
        <item name="barOrientation">horizontal</item>
        <item name="showTitle">false</item>
    </style>

    <style name="Theme.DashBoard.PieChart.DownloadChart">
        <item name="activeSectorColor">@color/pistachio</item>
        <item name="doneSectorColor">@color/cyber_grape</item>
        <item name="failedSectorColor">@color/dark_pastel_red</item>
        <item name="pieSectorLabelColor">@color/white</item>
    </style>

    <style name="Theme.DashBoard.PieChart.MediaChart">
        <item name="audioColor">@color/celadon_blue</item>
        <item name="imageColor">@color/pistachio</item>
        <item name="videoColor">@color/cyber_grape</item>
        <item name="textColor">@color/metallic_sunburst</item>
        <item name="otherColor">@color/pumpkin</item>
        <item name="pieSectorLabelColor">@color/white</item>
    </style>

    <style name="Theme.DashBoard.BarChart.DownloadChart">
        <item name="activeSectorColor">@color/pistachio</item>
        <item name="doneSectorColor">@color/cyber_grape</item>
        <item name="failedSectorColor">@color/dark_pastel_red</item>
    </style>

    <style name="Theme.DashBoard.BarChart.MediaChart">
        <item name="audioColor">@color/celadon_blue</item>
        <item name="imageColor">@color/pistachio</item>
        <item name="videoColor">@color/cyber_grape</item>
        <item name="textColor">@color/metallic_sunburst</item>
        <item name="otherColor">@color/pumpkin</item>
    </style>
</resources>